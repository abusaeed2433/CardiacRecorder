<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CardiacRecorder" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/action1</item>-->
<!--        <item name="colorPrimaryVariant">@color/action2</item>-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppThemeWithClose" parent="Theme.CardiacRecorder">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="homeAsUpIndicator">@drawable/baseline_close_24</item>
    </style>

    <style name="customExposedStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorAccent">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

</resources>
